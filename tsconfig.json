{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "declaration": true,
    "noImplicitAny": true,
    "removeComments": true,
    "module": "commonjs",
    "strictNullChecks": true,
    "target": "es5",
    "jsx": "react",
    "experimentalDecorators": true,
    "noImplicitThis": true,
    "allowJs": true,
    "typeRoots": ["./node_modules/@types"],
    "baseUrl": "src"
  },
  "exclude": ["node_modules"],
  "include": ["./src/**/*", "./test/**/*"]
}
